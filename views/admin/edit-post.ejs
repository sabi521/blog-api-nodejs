<a href="/dashboard">&larr; Back</a>
<div class="admin-title">
  <h2>View / Edit Post</h2>

  <form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST">
    <input type="submit" value="Delete" class="btn-delete btn" />
  </form>
</div>

<!-- Form for Editing Post -->
<form
  action="/edit-post/<%= data._id %>?_method=PUT"
  method="POST"
  enctype="multipart/form-data"
>
  <label for="title"><b>Title</b></label>
  <input
    type="text"
    placeholder="Post Title"
    name="title"
    value="<%= data.title %>"
  />

  <label for="body"><b>Content</b></label>
  <textarea name="body" cols="50" rows="10"><%= data.body %></textarea>

  <!-- Existing Image Preview -->
  <% if (data.imageUrl) { %>
  <p>Current Image:</p>
  <img
    src="<%= data.imageUrl %>"
    alt="Current Image"
    style="width: 150px; height: auto"
  />
  <% } %>

  <!-- Input for New Image Upload -->
  <label for="image"><b>Upload New Image</b></label>
  <input type="file" name="image" accept="image/*" />

  <input type="submit" value="Update" class="btn" />
</form>
